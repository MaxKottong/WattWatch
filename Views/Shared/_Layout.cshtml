<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WattWatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/WattWatch.styles.css" asp-append-version="true" />
    <script src="js/rgraph/RGraph.common.core.js"></script>      <!-- Always needed -->
    <script src="js/rgraph/RGraph.common.dynamic.js"></script>   <!-- Just needed for dynamic features -->

    <script src="js/rgraph/RGraph.common.annotate.js"></script>  <!-- Just needed for the annotating functionality -->
    <script src="js/rgraph/RGraph.common.context.js"></script>   <!-- Just needed for context menus -->
    <script src="js/rgraph/RGraph.common.csv.js"></script>       <!-- Just needed for accessing CSV files -->
    <script src="js/rgraph/RGraph.common.effects.js"></script>   <!-- Just needed for visual effects -->
    <script src="js/rgraph/RGraph.common.key.js"></script>       <!-- Just needed for showing keys -->
    <script src="js/rgraph/RGraph.common.sheets.js"></script>    <!-- Just needed for accessing Google Sheets -->
    <script src="js/rgraph/RGraph.common.tooltips.js"></script>  <!-- Just needed for showing tooltips -->

    <script src="js/rgraph/RGraph.activity.js"></script>         <!-- Just needed for Activity meters -->
    <script src="js/rgraph/RGraph.bar.js"></script>              <!-- Just needed for Bar charts -->
    <script src="js/rgraph/RGraph.bipolar.js"></script>          <!-- Just needed for Bi-polar charts -->
    <script src="js/rgraph/RGraph.fuel.js"></script>             <!-- Just needed for Fuel charts -->
    <script src="js/rgraph/RGraph.funnel.js"></script>           <!-- Just needed for Funnel charts -->
    <script src="js/rgraph/RGraph.gantt.js"></script>            <!-- Just needed for Gantt charts -->
    <script src="js/rgraph/RGraph.gauge.js"></script>            <!-- Just needed for Gauge charts -->
    <script src="js/rgraph/RGraph.hbar.js"></script>             <!-- Just needed for Horizontal Bar charts -->
    <script src="js/rgraph/RGraph.hprogress.js"></script>        <!-- Just needed for Horizontal Progress bars -->
    <script src="js/rgraph/RGraph.horseshoe.js"></script>        <!-- Just needed for Horseshoe meters -->
    <script src="js/rgraph/RGraph.line.js"></script>             <!-- Just needed for Line charts -->
    <script src="js/rgraph/RGraph.meter.js"></script>            <!-- Just needed for Meter charts -->
    <script src="js/rgraph/RGraph.odo.js"></script>              <!-- Just needed for Odometers -->
    <script src="js/rgraph/RGraph.pie.js"></script>              <!-- Just needed for Pie AND Donut charts -->
    <script src="js/rgraph/RGraph.radar.js"></script>            <!-- Just needed for Radar charts -->
    <script src="js/rgraph/RGraph.rose.js"></script>             <!-- Just needed for Rose charts -->
    <script src="js/rgraph/RGraph.rscatter.js"></script>         <!-- Just needed for RScatter charts -->
    <script src="js/rgraph/RGraph.scatter.js"></script>          <!-- Just needed for Scatter charts -->
    <script src="js/rgraph/RGraph.segmented.js"></script>        <!-- Just needed for Segmented donut charts -->
    <script src="js/rgraph/RGraph.semicircularprogress.js"></script> <!-- Just needed for Semi-circular Progress charts -->
    <script src="js/rgraph/RGraph.thermometer.js"></script>      <!-- Just needed for Thermometer charts -->
    <script src="js/rgraph/RGraph.vprogress.js"></script>        <!-- Just needed for Vertical Progress bars -->
    <script src="js/rgraph/RGraph.waterfall.js"></script>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom box-shadow fixed-top">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">WattWatch</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        @if (User.Identity.IsAuthenticated) {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard" asp-action="Index">Dashboard</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Statistics" asp-action="Index">Statistics</a>
                            </li>
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Logout">Logout</a>
                            </li>
                        }
                        else {
                            <li class="nav-item ms-auto">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Index">Login</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - WattWatch
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
